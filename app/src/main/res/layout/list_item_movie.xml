<?xml version="1.0" encoding="utf-8"?>
<xyz.louiscad.popularmovies.ui.widget.MovieListItem_
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <include layout="@layout/poster"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/posterImage"
        android:layout_gravity="start|center_vertical"
        android:layout_toLeftOf="@+id/favoriteButton"
        android:layout_toStartOf="@+id/favoriteButton"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minLines="2"
        android:padding="8dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        tools:text="Movie title"/>

    <ImageButton
        android:id="@+id/favoriteButton"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/titleTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/titleTextView"

        android:src="@drawable/ic_favorite_outline_24dp"
        tools:ignore="ContentDescription"/>
</xyz.louiscad.popularmovies.ui.widget.MovieListItem_>