<?xml version="1.0" encoding="utf-8"?>
<xyz.louiscad.popularmovies.ui.widget.MovieListItem_
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/posterImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        fresco:progressBarImage="@color/colorPrimary"
        fresco:viewAspectRatio="0.6654676259"/>

    <FrameLayout
        android:id="@+id/footerBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/posterImage"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:padding="8dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            tools:text="Movie title"/>

        <ImageButton
            android:id="@+id/favoriteButton"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_favorite_outline_24dp"
            tools:ignore="ContentDescription"/>
    </FrameLayout>
</xyz.louiscad.popularmovies.ui.widget.MovieListItem_>